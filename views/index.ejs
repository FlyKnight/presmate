<!doctype html>
<html>
<head>
  <title>Twilio Call Center</title>
  <link rel="shortcut icon" href="/img/favicon.ico" />
  <script src="js/jquery-1.12.0.min.js"></script>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap-theme.min.css">
  <script src="//maxcdn.bootstrapcdn.com/bootstrap/2.3.2/js/bootstrap.min.js"></script>
    <link href='https://fonts.googleapis.com/css?family=Source+Sans+Pro:400italic,400,700' rel='stylesheet' type='text/css'>
  <link rel="stylesheet" type="text/css" href="css/main.css"></style>
</head>
<body>

  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <div class="navbar-header">
        <a class="navbar-brand" href="https://havenondemand.com"><img alt="Brand" src="img/hod-black.png" height="20"></a>
      </div>
      <ul class="nav navbar-nav">
        <li><a href="/">View all calls</a></li>
        <li><a href="/callcenter">Make a call</a></li>
        <li><a href="#">About</a></li>
      </ul>
      <!-- <ul class="nav navbar-nav navbar-right">
        <li><a href="#">About</a></li>
      </ul> -->
    </div>
  </nav>



<div class="row">
  <div class="col-xs-12">
    <h1>All your calls</h1>
  </div>
</div>
<div class="row">
  <div class="col-xs-12">
    <table class="table" id="callTable">
      <thead>
        <tr>
          <th>Call</th>
          <th>Call SID</th>
          <th> </th>
        </tr>
      </thead>
      <tbody>
        <% for (var i=0; i<calls.length; i++) { %>
        <tr>
          <!-- Completed processed -->
          <% if (calls[i]['processed'] && calls[i]['processing']) { %>
            <td><a href='call/<%= calls[i]['CallSid'] %>'>Call by <%= calls[i]['From'] %> to <%= calls[i]['To'] %> on <%= calls[i]['created'].getMonth()+1 %>/<%= calls[i]['created'].getDate()%>/<%= calls[i]['created'].getFullYear() %> at <%= calls[i]['created'].getHours() %>:<%= calls[i]['created'].getSeconds() %></a></td>
            <td id='CallSid-<%= i %>'><%= calls[i]['CallSid'] %></td>
            <td><button type="submit" class="btn btn-success" id='<%= calls[i]['CallSid'] %>' disabled="disabled">Processed</button></td>
          <!-- Currently processing -->
          <% } else if (!calls[i]['processed'] && calls[i]['processing']) { %>
            <td>Call by <%= calls[i]['From'] %> to <%= calls[i]['To'] %> on <%= calls[i]['created'].getMonth()+1 %>/<%= calls[i]['created'].getDate()%>/<%= calls[i]['created'].getFullYear() %> at <%= calls[i]['created'].getHours() %>:<%= calls[i]['created'].getSeconds() %></td>
            <td id='CallSid-<%= i %>'><%= calls[i]['CallSid'] %></td>
            <td><button type="submit" class="btn btn-success" id='<%= calls[i]['CallSid'] %>' disabled="disabled">Processing</button></td>
          <!-- Have not begun processing -->
          <% } else { %>
            <td>Call by <%= calls[i]['From'] %> to <%= calls[i]['To'] %> on <%= calls[i]['created'].getMonth()+1 %>/<%= calls[i]['created'].getDate()%>/<%= calls[i]['created'].getFullYear() %> at <%= calls[i]['created'].getHours() %>:<%= calls[i]['created'].getSeconds() %></td>
            <td id='CallSid-<%= i %>'><%= calls[i]['CallSid'] %></td>
            <td><button type="submit" class="btn btn-success" id='<%= calls[i]['CallSid'] %>' onclick='processCall(this)'>Process</button></td>
          <% } %>
          <td></td>
        </tr>
      </tbody>
    <% } %>

<script>
function processCall(elem) {
  //disable button
  elem.disabled = "disabled"
  elem.innerText = "Processing"
  var CallSid = elem.id
  $.ajax({
    url: "/processCall?CallSid="+CallSid,
    type: 'GET',
      success: function(res) {
        console.log(res);
      }
  });
}

$(window).load(function() {

});
</script>
</body>
